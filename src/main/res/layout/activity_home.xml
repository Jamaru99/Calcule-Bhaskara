<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idownward.calculebhaskara.Home"
    android:background="#3ca510">



    <!-- view for AdMob Banner Ad -->

    <EditText
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:inputType="numberDecimal|numberSigned"
        android:layout_marginBottom="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/editText2"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:onClick="editTextClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A ->"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/adView"
        android:layout_alignStart="@+id/adView" />

    <EditText
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:id="@+id/editText2"
        android:background="#ffffff"
        android:inputType="numberDecimal|numberSigned"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/adView"
        android:layout_alignEnd="@+id/adView"
        android:layout_marginTop="52dp"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/btnCalc"
        android:layout_alignStart="@+id/btnCalc"
        android:layout_marginRight="8dp"
        android:onClick="editTextClick" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/editText3"
        android:background="#ffffff"
        android:inputType="numberDecimal|numberSigned"
        android:layout_below="@+id/editText"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:onClick="editTextClick" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="B ->"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="C ->"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btnCalc"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:background="#ffffff"
        android:allowUndo="false"
        android:textColor="#3ca510" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="X&apos; = "
        android:layout_marginTop="27dp"
        android:id="@+id/x1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:maxLines="1"
        android:maxLength="18"
        android:layout_below="@+id/btnCalc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="X&quot; = "
        android:id="@+id/x2"
        android:maxLines="1"
        android:maxLength="18"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/x1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver cÃ¡lculo"
        android:onClick="clickResolution"
        android:id="@+id/btnRes"
        android:layout_alignTop="@+id/btnCalc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|right"
        android:textColor="#ffffff"
        android:background="#3ca510"
        android:textSize="13sp"
        android:layout_marginRight="8dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Limpar  "
        android:onClick="limpar"
        android:id="@+id/btnLimpar"
        android:gravity="center_vertical|right"
        android:textColor="#ffffff"
        android:background="#3ca510"
        android:textSize="13sp"
        android:layout_above="@+id/x1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="iDownward"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnCalc"
        android:layout_alignEnd="@+id/btnCalc" />



</RelativeLayout>
